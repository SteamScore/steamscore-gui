<div class="content ui container">
  <h1 class="ui dividing header">Games</h1>
  <table class="ui striped table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Achievements</th>
        <th>Players</th>
        <th>Score Rank</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |game|}}
        <tr>
          <td>
            <h4 class="ui image header">
              <img src="{{game.image}}" class="ui rounded image">
              <div class="content">
                {{#link-to "game" game}}{{game.name}}{{/link-to}}
                <div class="sub header">Developer / Publisher</div>
              </div>
            </h4>
          </td>
          <td>
            <span style="color: #ff8000">0</span> /
            <span style="color: #a335ee">0</span> /
            <span style="color: #0070dd">0</span> /
            <span style="color: #1eff00">0</span> /
            0
          </td>
          <td>{{format-number game.players}}</td>
          <td>
            {{#if game.scoreRank}}
              {{game.scoreRank}}
            {{else}}
              -
            {{/if}}
          </td>
        </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          <div class="ui right floated pagination menu">
            <a class="icon item">
              <i class="left chevron icon"></i>
            </a>
            <a class="item">1</a>
            <a class="item">2</a>
            <a class="item">3</a>
            <a class="item">4</a>
            <a class="icon item">
              <i class="right chevron icon"></i>
            </a>
          </div>
        </th>
      </tr>
    </tfoot>
  </table>
</div>